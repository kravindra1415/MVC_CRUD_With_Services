@model List<User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h3><a asp-controller="User" class="text-decoration-none text-primary mb-5" asp-action="Create">Create a Employee</a></h3>


<h1 class="mb-4">Employees Listing (Total @Model.Count)</h1>

<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <td>Id</td>
            <td>FirstName</td>
            <td>LastName</td>
            <td>DateOfBirth</td>
            <td>Pan</td>
            <td>Address</td>
            <td>Gender</td>
            <td>MobileNumber</td>
            <td>Email</td>
            <td>Comments</td>
            <td>DepartmentRefId</td>
            <td style="width=">&nbsp;</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.DateOfBirth</td>
                <td>@user.Pan</td>
                <td>@user.Address</td>
                <td>@user.Gender</td>
                <td>@user.MobileNumber</td>
                <td>@user.Email</td>
                <td>@user.Comments</td>
                <td>@user.DepartmentRefId</td>
                <td>
                    <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="text-decoration-none">Details</a> |
                    <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="text-decoration-none">Update</a> |
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="text-decoration-none">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>